<h1>Configure your cookie</h1>

<h2>Select cookie base:</h2>

{{> base-selector }}

<h2>Select cookie addons:</h2>
<ul>
{{#each addons}}
    <li>
        <a href="/configurator/add-addon/{{this.[0]}}">Select {{this.[0]}} for: {{this.[1]}} PLN</a>
    </li>
{{/each}}
</ul>


{{#if cookie.base}}
    {{> cookie-preview }}
    {{> addons }}
{{else}}

    <p><strong>Please select base of your cookie to se it's preview and price summary</strong></p>
    {{> base-selector}}

{{/if}}

